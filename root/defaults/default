server {

     listen 80 default_server;
     listen [::]:80 default_server;

     server_name _;

     return 301 https://$host$request_uri;
}

server {

     server_name _;
     listen 443 ssl http2 default_server;
     listen [::]:443 ssl http2 default_server;

     root /config/www/;
     index index.html;

     ssl_certificate /config/keys/cert.crt;
     ssl_certificate_key /config/keys/cert.key;

     client_max_body_size 0;
}
